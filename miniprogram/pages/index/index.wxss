swiper{
    height: 300rpx;
    width: 100%
}
/* 热门推荐开始 */
.hot-title{
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
    height: 50rpx;
    border-bottom:1px solid #ccc; 
}
.hot-title-left{
    font-size: 28rpx;
    color: #666666;
    display: inline-block;
    /* margin-top: 2rpx; */
    vertical-align: middle;
}
.hot-title-right{
    font-size: 24rpx;
    color: blue;
    display: inline-block;
    margin-top: -20rpx;
    vertical-align: middle;  
}
.list{
    border-bottom:1px solid #ccc; 
}
image{
    display: inline-block;
    width: 20%;
    height: 200rpx;
}
.details{
    display: inline-block;
    margin-left: 20rpx;
    padding: 0;
}
.title{
    display: block;
    font-size: 32rpx;
}
.author{
    display: block;
    font-size: 24rpx;
    color: rgb(126, 109, 109);
}
.country,.year{
    display: inline-block;
    font-size: 20rpx;
    border: 1px solid  #f00;
    color: #f00;
    margin-right: 20rpx;
}
/* 热门推荐结束 */
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-search-bar__cancel-btn{
    font-size: 14px;
}